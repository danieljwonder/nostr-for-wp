# NPM Configuration for WordPress Development

# Save exact versions in package-lock.json
save-exact=false

# Use ^ for version ranges (compatible with)
save-prefix=^

# Always save installed packages to package.json
save=true

# Generate package-lock.json
package-lock=true

# Optional: Set registry if needed
# registry=https://registry.npmjs.org/

# Fund messages can be disabled if preferred
fund=false

